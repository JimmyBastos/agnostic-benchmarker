{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "one-variable-per-declaration": false,
    "max-line-length": false,
    "max-classes-per-file": false,
    "object-literal-sort-keys": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-var-requires": false,
    "no-conditional-assignment": true,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "align": [
      true,
      "parameters",
      "statements",
      "members",
      "elements"
    ],
    "no-console": [
      false
    ]
  },
  "jsRules": {
    "max-line-length": false,
    // "key-spacing": [
    //   "error",
    //   {
    //     "align": "value"
    //   }
    // ],
    // "no-multi-spaces": [
    //   "error",
    //   {
    //     "exceptions": {
    //       "VariableDeclarator": true
    //     }
    //   }
    // ]
  }
}
